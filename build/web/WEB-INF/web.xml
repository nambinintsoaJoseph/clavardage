<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <!-- Servlet pour effectuer un test unitaire -->
    <servlet>
        <servlet-name>TestUnitaireServlet</servlet-name>
        <servlet-class>com.clavardage.servlets.TestUnitaireServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestUnitaireServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet qui permet de rediriger la requÃªte / vers l'interface utilisateur correspondante -->
    <servlet>
        <servlet-name>IndexUIServlet</servlet-name>
        <servlet-class>com.clavardage.servlets.IndexUIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexUIServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
</web-app>
