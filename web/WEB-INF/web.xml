<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <!-- Servlet pour effectuer un test unitaire -->
    <servlet>
        <servlet-name>TestUnitaireServlet</servlet-name>
        <servlet-class>com.clavardage.servlets.TestUnitaireServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestUnitaireServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet pour rediriger vers l'interface d'accueil -->
    <servlet>
        <servlet-name>AccueilUIServlet</servlet-name>
        <servlet-class>com.clavardage.servlets.AccueilUIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccueilUIServlet</servlet-name>
        <url-pattern>/accueil</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet pour rediriger vers l'interface de création d'un compte -->
    <servlet>
        <servlet-name>CreationCompteUIServlet</servlet-name>
        <servlet-class>com.clavardage.servlets.CreationCompteUIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreationCompteUIServlet</servlet-name>
        <url-pattern>/creation_compte</url-pattern>
    </servlet-mapping>
    
    <!-- Servlet pour gérer la création d'un compte utilisateur --> 
    <servlet>
        <servlet-name>CreationCompteServlet</servlet-name>
        <servlet-class>com.clavardage.servlets.CreationCompteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreationCompteServlet</servlet-name>
        <url-pattern>/creer_compte</url-pattern>
    </servlet-mapping>
    
</web-app>
